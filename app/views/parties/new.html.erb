<h1>Add Party</h1>
<%= render partial: "errors", locals: {thing: @party}%>

<%= form_with(model: @party) do |f| %>
    <%= render partial: "form", locals: {party: @party, f: f}%>
    <br>
    <h4> OR make a new category </h4>

    <%= f.fields_for :category do |category_fields| %>
        <%= category_fields.label :name %>
        <%= category_fields.text_field :name %>  
    <% end %>
    <h4> Create supplies (optional) </h4>
    <%= f.fields_for :supplies, @party.supplies.build do |supplies_fields| %>
        <%= supplies_fields.label :name %>
        <%= supplies_fields.text_field :name %>  
    <% end %>

    <br><%= f.submit %>

<% end %>

<%= link_to "Back", :back %>